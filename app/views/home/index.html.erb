<div class="container bg-light">

  <div class="row main">
    <div class="col-md-8 movies-list">
      <% @movies.each do |movie| %>
  <div class="row movie-section border-bottom">
    <div class="col-md-4 movie-image">
   <img class="img-fluid" src="images/logo.png">
    </div>

    <div class="col-md-8">
      <div class="row movie-title"> <%= movie.title%> </div>
      <div class="row d-flex movie-sessions">
        <ul>
        <% movie.screens.each do |screen| %>
            <li class="d-inline-block"><a class="p-2 bg-secondary text-white" id ><%=screen.screen_at.strftime("%H:%m") %></a></li>
        <%end %>
        </ul>

      </div>

      </div>
    </div>
      <% end %>
    </div>
    <div class="col-med-4 filters">
    </div>
  </div>
</div>
</div>
</div>
